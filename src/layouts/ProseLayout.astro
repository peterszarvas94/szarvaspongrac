---
import BaseLayout from "./BaseLayout.astro";
import Footer from "../components/Footer.astro";
import PageTitle from "../components/PageTitle.astro";
import { Image } from "astro:assets";
import ImageUpload from "src/components/ImageUpload.astro";

export interface Props {
  key: string;
  title: string;
  description: string;
  pageTitle?: string;
  image?: {
    src: any;
    alt: string;
    caption: string;
  };
}

const { key, title, description, pageTitle, image } = Astro.props;
---

<BaseLayout
  title={title}
  description={description}
  mainClass="py-4"
  scripts={["image-upload"]}
>
  {pageTitle && <PageTitle title={pageTitle} />}

  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    {
    image && (

        <ImageUpload
          key={key}
        />

        <figure class="flex flex-col items-center mb-8">
          {typeof image.src === "string" ? (
            <img
              src={image.src}
              alt={image.alt}
              class="rounded-md w-full max-w-64 h-auto"
            />
          ) : (
            <Image
              src={image.src}
              alt={image.alt}
              class="rounded-md w-full max-w-64 h-auto"
            />
          )}
          <figcaption class="text-base-content/70 italic mt-2">
            {image.caption}
          </figcaption>
        </figure>
      )
    }

    <!-- Prose Content -->
    <article class="prose prose-lg max-w-none">
      <slot />
    </article>
  </div>

  <Footer slot="footer" />
</BaseLayout>

<style is:global>
  /* Simple prose styling for clean content */
  .prose h1 {
    margin: 0 auto;
    padding: 1rem 0 2.5rem 0;
  }

  .prose h2 {
    font-size: 1.5rem;
    font-weight: 700;
    color: #111827;
    margin-bottom: 1rem;
    margin-top: 2rem;
  }

  .prose h3 {
    font-size: 1.25rem;
    font-weight: 700;
    color: #111827;
    margin-bottom: 0.75rem;
    margin-top: 1.5rem;
  }

  .prose p {
    font-size: 1.125rem;
    line-height: 1.75;
    margin-bottom: 1.5rem;
    text-align: justify;
  }

  .prose .no-margin p {
    margin: 0 auto;
  }

  .prose img {
    width: 100%;
    max-width: 16rem;
    height: auto;
    border-radius: 0.5rem;
    margin: 0 auto;
    display: block;
  }

  .prose figure {
    text-align: center;
    margin: 0 auto;
  }

  .prose figure img {
    margin-bottom: 0.75rem;
  }

  .prose figcaption {
    font-size: 0.875rem;
    color: #6b7280;
    font-style: italic;
    margin-top: 0.5rem;
  }

  .prose ul {
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
  }

  .prose li {
    margin-bottom: 0.25rem;
    line-height: 1.6;
  }
</style>
