---
import Header from "@components/Header.astro";
import Toaster from "@components/Toaster.astro";
import ConfirmDialog from "@components/ConfirmDialog.astro";
import "@styles/global.css";
import "@styles/prose-fix.css";

export interface Props {
  title?: string;
  description?: string;
  mainClass?: string;
}

const {
  title = "Szarvas Pongrác - Grafikus, Festő, Illusztrátor",
  description = "Szarvas Pongrác grafikus, festő, illusztrátor honlapja - Modern verzió",
  mainClass = "",
} = Astro.props;

const socialImage = new URL("/images/cover.JPG", Astro.site ?? Astro.url).href;
const canonicalUrl = Astro.url.href;
---

<!doctype html>
<html
  lang="hu"
  data-theme="light"
  class="bg-base-200"
>
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content={description}
    />
    <meta
      name="keywords"
      content="Szarvas Pongrác, grafikus, festő, illusztrátor, vadászat, természet, Baja"
    />
    <meta
      name="author"
      content="Szarvas Pongrác"
    />
    <meta
      property="og:title"
      content={title}
    />
    <meta
      property="og:description"
      content={description}
    />
    <meta
      property="og:type"
      content="website"
    />
    <meta
      property="og:url"
      content={canonicalUrl}
    />
    <meta
      property="og:image"
      content={socialImage}
    />
    <meta
      name="twitter:card"
      content="summary_large_image"
    />
    <meta
      name="twitter:title"
      content={title}
    />
    <meta
      name="twitter:description"
      content={description}
    />
    <meta
      name="twitter:image"
      content={socialImage}
    />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0"
    />
    <link
      rel="icon"
      type="image/x-icon"
      href="/favicon.ico"
    />
    <meta
      name="pb-url"
      content={import.meta.env.PUBLIC_PB_URL}
    />
    <title>{title}</title>
  </head>
  <body class="bg-base-200 min-h-screen relative font-inter">
    <Header />
    <div class="flex flex-col min-h-[calc(100vh-4rem)] justify-between">
      <main class={`flex-1 ${mainClass}`}>
        <slot />
      </main>
      <slot name="footer" />
    </div>
    <Toaster />
    <ConfirmDialog />
  </body>
</html>

<script>
  import "@scripts/auth-form";
  import "@scripts/content-manager";
  import "@scripts/footer";
</script>
