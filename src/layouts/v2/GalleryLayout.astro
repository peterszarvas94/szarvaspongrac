---
import BaseLayout from "./BaseLayout.astro";
import Footer from "../../components/v2/Footer.astro";
import ImageGallery from "../../components/v2/ImageGallery.astro";
import PageTitle from "../../components/v2/PageTitle.astro";

export interface Props {
  title: string;
  description: string;
  pageTitle: string;
  images: string[];
  galleryTitle: string;
  backHref?: string;
  backText?: string;
}

const {
  title,
  description,
  pageTitle,
  images,
  galleryTitle,
  backHref = "/v2/kepzomuveszet",
  backText = "Vissza a Képzőművészethez",
} = Astro.props;
---

<BaseLayout
  title={title}
  description={description}
  mainClass="py-4"
>
  <PageTitle title={pageTitle} />

  <!-- Gallery Content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Image Gallery -->
    <ImageGallery
      images={images}
      title={galleryTitle}
    />

    <!-- Back Navigation -->
    <div class="mt-12 text-center">
      <a
        href={backHref}
        class="inline-flex items-center px-6 py-3 bg-gray-900 text-white font-medium rounded-lg hover:bg-gray-700 transition-colors duration-200"
      >
        <svg
          class="w-5 h-5 mr-2"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M10 19l-7-7m0 0l7-7m-7 7h18"
          ></path>
        </svg>
        {backText}
      </a>
    </div>
  </div>

  <Footer slot="footer" />
</BaseLayout>

