---
import { Image } from "astro:assets";

export interface Props {
  src: string;
  alt: string;
  width?: number;
  height?: number;
  class?: string;
  loading?: "lazy" | "eager";
}

const {
  src,
  alt,
  width = 300,
  height = 400,
  class: className = "",
  loading = "lazy",
} = Astro.props;
