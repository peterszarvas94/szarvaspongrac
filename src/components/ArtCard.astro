---
import { ImageOff } from "lucide-astro";

export interface Props {
  href: string;
  coverKey: string;
  imageAlt: string;
  title: string;
  className?: string;
}

const { href, coverKey, imageAlt, title, className } = Astro.props;
---

<a
  href={href}
  class="w-full"
>
  <div class="hover-3d w-full">
    <figure
      class={`max-w-100 rounded-2xl overflow-hidden shadow-lg shadow-base-content/50 ${className}`}
    >
      <img
        src=""
        alt={imageAlt}
        class="w-full h-64 object-cover opacity-0 transition-opacity duration-300"
        data-cover={coverKey}
      />
      <div class="p-6 text-center bg-neutral text-neutral-content">
        <h3 class="text-xl font-semibold">{title}</h3>
      </div>
    </figure>
    <div></div>
    <div></div>
    <div></div>
    <div></div>
    <div></div>
    <div></div>
    <div></div>
    <div></div>
  </div>
</a>

<template id="missing-cover">
  <div class="h-64 w-full flex items-center justify-center">
    <ImageOff class="size-10 text-base-content opacity-60" />
  </div>
</template>

<script>
  import "@scripts/art-card";
</script>
