---
export interface Props {
  href: string;
  coverKey: string;
  imageAlt: string;
  title: string;
  className?: string;
}

const { href, coverKey, imageAlt, title, className } = Astro.props;
---

<a
  href={href}
  class="w-full"
>
  <div class="hover-3d w-full">
    <figure
      class={`max-w-100 rounded-2xl overflow-hidden shadow-lg shadow-base-content/50 ${className}`}
    >
      <img
        src=""
        alt={imageAlt}
        class="w-full h-64 object-cover"
        data-cover={coverKey}
      />
      <div class="p-6 text-center bg-gray-900 text-white">
        <h3 class="text-xl font-semibold">{title}</h3>
      </div>
    </figure>
    <div></div>
    <div></div>
    <div></div>
    <div></div>
    <div></div>
    <div></div>
    <div></div>
    <div></div>
  </div>
</a>

<script>
  import "@scripts/art-card";
</script>
