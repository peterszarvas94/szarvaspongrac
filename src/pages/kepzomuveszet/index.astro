---
import PageLayout from "@layouts/PageLayout.astro";
import ArtCard from "@components/ArtCard.astro";
---

<PageLayout
  title="Képzőművészet - Szarvas Pongrác"
  description="Szarvas Pongrác képzőművészeti alkotásai"
  pageTitle="Képzőművészet"
>
  <div
    class="grid place-items-center w-fit mx-auto grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8"
  >
    <ArtCard
      href="/kepzomuveszet/olaj"
      coverKey="gallery.oil"
      imageAlt="Olajfestmények"
      title="Olajfestmények"
    />

    <ArtCard
      href="/kepzomuveszet/akvarell"
      coverKey="gallery.watercolor"
      imageAlt="Akvarellek"
      title="Akvarellek"
    />

    <ArtCard
      href="/kepzomuveszet/pasztell"
      coverKey="gallery.pastel"
      imageAlt="Pasztellek"
      title="Pasztellek"
    />

    <ArtCard
      href="/kepzomuveszet/grafika"
      coverKey="gallery.graphics"
      imageAlt="Grafikák"
      title="Grafikák"
    />

    <ArtCard
      href="/kepzomuveszet/illusztracio"
      coverKey="gallery.illustration"
      imageAlt="Illusztrációk"
      title="Illusztrációk"
    />

    <ArtCard
      href="/kepzomuveszet/egyeb"
      coverKey="gallery.others"
      imageAlt="Egyéb alkotások"
      title="Illusztrációk"
    />
  </div>
</PageLayout>
