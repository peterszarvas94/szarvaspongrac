---
import V2Layout from "../../layouts/V2Layout.astro";
import NavigationCard from "../../components/v2/NavigationCard.astro";
import { BookUser, Palette, Mail } from "@lucide/astro";
import Footer from "../../components/v2/Footer.astro";
---

<V2Layout
  title="Szarvas Pongrác - Grafikus, Festő, Illusztrátor"
  description="Szarvas Pongrác grafikus, festő, illusztrátor honlapja - Modern verzió"
>
  <!-- Hero Section -->
  <section
    class="relative min-h-[70vh] bg-[url('/images/szarvasok.jpg')] bg-cover bg-center bg-no-repeat flex items-center justify-center before:absolute before:inset-0 before:bg-black/40 before:pointer-events-none"
  >
    <!-- Hero Content -->
    <div
      class="relative z-10 text-center px-4 sm:px-6 lg:px-8 max-w-4xl mx-auto"
    >
      <h1 class="text-6xl md:text-7xl text-base-100 mb-6">Szarvas Pongrác</h1>
      <p class="text-lg text-base-100/80 max-w-2xl mx-auto">
        Grafikus • Illusztrátor • Festő
      </p>
    </div>
  </section>

  <!-- Navigation Cards -->
  <section class="py-8 bg-base-200">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex gap-4 flex-col sm:flex-row items-center justify-center">
        <NavigationCard
          href="/v2/eletrajz"
          title="Életrajz"
          icon={BookUser}
          hoverColor="primary"
        />

        <NavigationCard
          href="/v2/kepzomuveszet"
          title="Képzőművészet"
          icon={Palette}
          hoverColor="secondary"
        />

        <NavigationCard
          href="/v2/kapcsolat"
          title="Kapcsolat"
          icon={Mail}
          hoverColor="accent"
        />
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</V2Layout>
